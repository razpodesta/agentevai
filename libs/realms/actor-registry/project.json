{
  "name": "actor-registry",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/realms/actor-registry/src",
  "projectType": "library",
  "metadata": {
    "description": "Cartório de Identidade Bruta: Repositório mestre para dados PII e certidões de nascimento digital de todos os atores.",
    "author": "Raz Podestá - MetaShark Tech"
  },
  "tags": [
    "type:domain",
    "scope:registry",
    "role:identity-vault",
    "tier:core-logic"
  ],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/realms/actor-registry",
        "main": "libs/realms/actor-registry/src/index.ts",
        "tsConfig": "libs/realms/actor-registry/tsconfig.lib.json",
        "assets": ["libs/realms/actor-registry/*.md"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/realms/actor-registry/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
