{
  "name": "behavioral-sentinel",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/orchestration/behavioral-sentinel/src",
  "projectType": "library",
  "metadata": {
    "description": "Analista de Intenção: Gera fingerprints SHA-256 e identifica padrões de automação hostil via heurística behaviorista.",
    "author": "Raz Podestá - MetaShark Tech"
  },
  "tags": [
    "type:util",
    "scope:orchestration",
    "role:threat-intelligence",
    "tier:security"
  ],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/orchestration/behavioral-sentinel",
        "main": "libs/orchestration/behavioral-sentinel/src/index.ts",
        "tsConfig": "libs/orchestration/behavioral-sentinel/tsconfig.lib.json",
        "assets": ["libs/orchestration/behavioral-sentinel/*.md"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/orchestration/behavioral-sentinel/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
