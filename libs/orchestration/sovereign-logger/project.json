{
  "name": "sovereign-logger",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/orchestration/sovereign-logger/src",
  "projectType": "library",
  "tags": ["type:util", "scope:orchestration"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/orchestration/sovereign-logger",
        "main": "libs/orchestration/sovereign-logger/src/index.ts",
        "tsConfig": "libs/orchestration/sovereign-logger/tsconfig.lib.json",
        "assets": ["libs/orchestration/sovereign-logger/*.md"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/orchestration/sovereign-logger/jest.config.cts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}