{
  "name": "sovereign-attestation",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/foundation/sovereign-attestation/src",
  "projectType": "library",
  "metadata": {
    "description": "Provedor de Fé Pública Física: Valida a integridade de hardware para certificação de rastro IAL3.",
    "author": "Raz Podestá - MetaShark Tech"
  },
  "tags": [
    "type:util",
    "scope:foundation",
    "role:security-attestation",
    "standard:nist-ial3"
  ],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/foundation/sovereign-attestation",
        "main": "libs/foundation/sovereign-attestation/src/index.ts",
        "tsConfig": "libs/foundation/sovereign-attestation/tsconfig.lib.json",
        "assets": ["libs/foundation/sovereign-attestation/*.md"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/foundation/sovereign-attestation/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
