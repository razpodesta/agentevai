{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/out-tsc",
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": ["jest", "node", "@testing-library/react"],
    "jsx": "react-jsx"
  },
  "include": [
    "jest.config.ts",
    "jest.config.cts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "**/*.d.ts"
  ]
}