{
  /* --- üß± FUNDA√á√ÉO CSS & TAILWIND V4 --- */
  "css.customData": [],
  "css.lint.unknownAtRules": "ignore",
  "scss.lint.unknownAtRules": "ignore",
  "tailwindCSS.experimental.classRegex": [
    ["@apply\\s+([^;]*);", "'([^']*)'"],
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["twMerge\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "tailwindCSS.includeLanguages": {
    "plaintext": "css",
    "typescriptreact": "tailwindcss"
  },
  "tailwindCSS.emmetCompletions": true,

  /* --- üöÄ OTIMIZA√á√ÉO DE PERFORMANCE (NX MONOREPO) --- */
  // Impede que o VS Code tente indexar lixo de build e cache, reduzindo o CPU em at√© 30%
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.nx/**": true,
    "**/dist/**": true,
    "**/tmp/**": true,
    "**/.next/**": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/tmp": true,
    "**/.nx": true,
    "**/.next": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true
  },

  /* --- üß¨ INTELIG√äNCIA DE TIPOS (TS SERVER) --- */
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  
  /* --- üõ°Ô∏è HIGIENE FORENSE (AUTO-FIX) --- */
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "eslint.run": "onSave"
}