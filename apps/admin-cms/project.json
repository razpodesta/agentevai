{
  "name": "api-core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api-core/src",
  "projectType": "application",
  "tags": ["type:app", "platform:server", "stack:nestjs-11", "domain:core"],
  "targets": {
    "build": {
      "executor": "@nx/webpack:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/api-core",
        "main": "apps/api-core/src/main.ts",
        "tsConfig": "apps/api-core/tsconfig.app.json",
        "assets": ["apps/api-core/src/assets"],
        "webpackConfig": "apps/api-core/webpack.config.js",
        "generatePackageJson": true,
        "tsPlugins": [
          {
            "name": "@nestjs/swagger/plugin",
            "options": {
              "dtoFileNameSuffix": [".dto.ts", ".entity.ts"],
              "controllerFileNameSuffix": [".controller.ts"],
              "classValidatorShim": true,
              "dtoKeyOfComment": "description"
            }
          }
        ]
      },
      "configurations": {
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        },
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/api-core/src/environments/environment.ts",
              "with": "apps/api-core/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "api-core:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "api-core:build:development"
        },
        "production": {
          "buildTarget": "api-core:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/api-core/jest.config.cts",
        "passWithNoTests": true
      }
    },
    "prune": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm mod-clean -n -r",
          "cd dist/apps/api-core && pnpm install --prod"
        ],
        "parallel": false
      },
      "dependsOn": ["build"]
    }
  }
}
